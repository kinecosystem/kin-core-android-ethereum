<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/testBg</item>
        <item name="colorAccent">@color/mainBg</item>


    </style>

    <style name="KinButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="KinButtonStyle.TestNet">
        <item name="android:background">@drawable/button_test_network_bg</item>
    </style>

    <style name="KinButtonStyle.MainNet">
        <item name="android:background">@drawable/button_main_network_bg</item>
    </style>

    <style name="kinText">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="kinInputText">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="kinText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
